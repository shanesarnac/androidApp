<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Point Earned"
        android:id="@+id/textViewPoint"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="48dp"
        android:textSize="28dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Class Perc"
        android:id="@+id/class_perc"
        android:layout_marginTop="96dp"
        android:textSize="28dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Point"
        android:id="@+id/total_point"
        android:layout_marginTop="48dp"
        android:textSize="28dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/point_earned"
        android:layout_alignTop="@+id/textViewPoint"
        android:layout_toRightOf="@+id/textViewPoint"
        android:layout_toEndOf="@+id/textViewPoint"/>
</RelativeLayout>